@model C4_Assignment.Models.DanhMuc

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">XÓA THÔNG TIN SẢN PHẨM</h1>

<h3>Bạn có chắc muốn xóa sản phẩm này ?</h3>
<div>
    <hr />
    <dl class="row fs-4">
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.TenDanhMuc)
        </dt>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.TenDanhMuc)
        </dd>
        <dt class = "col-sm-6">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class = "col-sm-6">
            <img src="@Html.DisplayFor(model => model.HinhAnh)" alt="Alternate Text" width="25%" />
