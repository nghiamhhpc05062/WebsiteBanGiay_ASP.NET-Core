    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DanhMucID" />
        <input type="submit" value="Xóa" class="btn btn-danger col-sm-2" />
        <a class="btn btn-secondary col-sm-2" asp-action="Index">Quay trở lại</a>
    </form>
</div>
