@{
    ViewData["Title"] = "Home Page";
}

@model ListProduct


@* carousel *@
<section class="container-fluid mt-5">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/image/banner/bn4.jpg" alt="Alternate Text" width="100%" height="500px" />
            </div>
            <div class="carousel-item">
                <img src="/image/banner/bn3.jpg" alt="Alternate Text" width="100%" height="500px" />
            </div>
            <div class="carousel-item">
                <img src="/image/banner/bn13.jpg" alt="Alternate Text" width="100%" height="500px" />
            </div>
            <div class="carousel-item">
                <img src="/image/banner/bn11.jpg" alt="Alternate Text" width="100%" height="500px" />
            </div>
            <div class="carousel-item">
                <img src="/image/banner/bn12.jpg" alt="Alternate Text" width="100%" height="500px" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


@* Service *@
<section class="container-fluid">
    <hr />
    <h1 class="mb-5 text-secondary"><strong>DỊCH VỤ</strong></h1>
    <div class="row p-5 text-center">
        <div class="col-sm-4">
            <img src="/image/banner/bn5.png" alt="Alternate Text" width="100%" />
            <h3 class="mt-3">MIỄN PHÍ GIAO HÀNG</h3>
        </div>
        <div class="col-sm-4">
            <img src="/image/banner/bn7.jpg" alt="Alternate Text" width="100%" />
            <h3 class="mt-3">VỆ SINH GIÀY</h3>
        </div>
        <div class="col-sm-4">
            <img src="/image/banner/bn9.jpg" alt="Alternate Text" width="100%" />
            <h3 class="mt-3">THIẾT KẾ CỦA RIÊNG BẠN</h3>
        </div>
    </div>
</section>



@* Danh Muc *@
<section style="background-color: #eee;">
    <div class="container py-5">
        <h1 class="text-secondary mb-5"><strong>DANH MỤC SẢN PHẨM</strong></h1>
        <div class="row">
            @foreach (var i in Model.danhMucz)
            {
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="bg-/image hover-zoom ripple shadow-1-strong rounded">
                        <a href="/User/Home/Product?id=@i.DanhMucID">
                            <img src="@i.HinhAnh" class="w-100" height="300px" />
                            <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                                <div class="d-flex justify-content-start align-items-start h-100">
                                    <h5><span class="badge bg-light pt-2 ms-3 mt-3 text-dark">@i.TenDanhMuc</span></h5>
                                </div>
                            </div>
                            <div class="hover-overlay">
                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


@* Nổi bậc *@
<div class="container-fluid">
    <img src="/image/banner/bn8.jpg" alt="Alternate Text" width="100%" height="250px" />
</div>

<section id="mobile-products" class="container-fluid product-store position-relative padding-large no-padding-top mt-5 m-auto" style="min-height:600px">
    <hr />
    <h2 class="fw-bold">SẢN PHẨM NỔI BẬC</h2>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row m-auto p-2">

                    @foreach (var i in Model.sanPhamz.Take(3))
                    {
                        <div class="gx-5 col-sm-4">
                            <div class="col-sm-12 mb-4">
                                <div class="bg-/image hover-overlay shadow-2-strong" data-mdb-ripple-init data-mdb-ripple-color="light">
                                    <img src="@i.HinhAnh" width="100%" height="250px" />
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </a>
                                </div>
                            </div>

                            <div class="col-sm-12 mb-4">
                                <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3">Adidas x Dragonball Z</span>
                                <h4><strong>@i.TenSanPham</strong></h4>
                                <p>Note</p>
                                <p class="text-muted"><span class="text-muted">@i.Gia.ToString("#,000")</span></p>
                                <button type="button" class="col-sm-12 btn btn-primary" data-mdb-ripple-init>Thêm vào giỏ hàng</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="carousel-item">
                <div class="row m-auto p-2">

                    @foreach (var i in Model.sanPhamz.Skip(3).Take(3))
                    {
                        <div class="gx-5 col-sm-4">
                            <div class="col-sm-12 mb-4">
                                <div class="bg-/image hover-overlay shadow-2-strong" data-mdb-ripple-init data-mdb-ripple-color="light">
                                    <img src="@i.HinhAnh" width="100%" height="250px" />
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </a>
                                </div>
                            </div>

                            <div class="col-sm-12 mb-4">
                                <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3">Adidas x Dragonball Z</span>
                                <h4><strong>@i.TenSanPham</strong></h4>
                                <p>Note</p>
                                <p class="text-muted"><span class="text-muted">@i.Gia.ToString("#,000")</span></p>
                                <button type="button" class="col-sm-12 btn btn-primary" data-mdb-ripple-init>Thêm vào giỏ hàng</button>
                            </div>
                        </div>
                    }


                </div>
            </div>

        </div>
    </div>
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" class="bg-secondary" data-bs-slide-to="0" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" class="bg-secondary" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>
</section>


