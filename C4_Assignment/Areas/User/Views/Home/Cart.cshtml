@{
    ViewData["Title"] = "Cart";
}

@model IQueryable<C4_Assignment.Models.SanPham>

<h1>Cart</h1>

<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Giỏ hàng - 1 sản phẩm</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                             @foreach (var i in Model)
                            {
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                        <img src="@i.HinhAnh"
                                             width="100%" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                    <p class="text-start text-md-center">
                                        <strong>@i.Gia.ToString("#,000") đ</strong>
                                    </p>
                                </div>
                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <p><strong>@i.TenSanPham</strong></p>
                                    <p>Màu sắc : @i.MauSac</p>
                                    <p>Size: @i.KichThuoc</p>

                                    <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                                            title="Remove item">
                                        <span>Xóa</span>
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm mb-2" data-mdb-toggle="tooltip"
                                            title="Move to the wish list">
                                        <span>Thích</span>
                                    </button>
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                    <label class="form-label" for="form1">Số lượng</label>
                                    <div class="d-flex" style="max-width: 300px; min-height:20px">
                                        <button class="btn btn-primary" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                            <span>-</span>
                                        </button>

                                        <div class="form-outline">
                                            <input id="form1" min="0" name="quantity" value="1" type="number" class="form-control" />
                                        </div>

                                        <button class="btn btn-primary"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                            <span>+</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        <hr class="my-4" />
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Dự kiến ngày giao hàng đến khách hàng</strong></p>
                        <p class="mb-0">12.10.2020 - 14.10.2020</p>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p><strong>Thanh toán qua ví</strong></p>
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                             alt="Visa" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                             alt="American Express" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                             alt="Mastercard" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Tóm tắt giỏ hàng</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Sản phẩm
                                <span>1.000.000 đ</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Vạn chuyển
                                <span>Free</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng số tiền</strong>
                                    <strong>
                                        <p class="mb-0">(đã bao gồm VAT)</p>
                                    </strong>
                                </div>
                                <span><strong>1.250.000 đ</strong></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-primary btn-lg btn-block">
                            Thanh toán
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>