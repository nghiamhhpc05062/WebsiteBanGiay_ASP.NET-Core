@model C4_Assignment.Models.TaiKhoan

<div class="container" style="margin-top:5%">

    <section class="">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Login">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">KING SHOES</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập tài khoản</h5>

                                        <div class="form-outline mb-4">
                                            <label asp-for="TenDangNhap" class="control-label"></label>
                                            <input asp-for="TenDangNhap" class="form-control" />
                                            <span hidden asp-validation-for="TenDangNhap" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label asp-for="MatKhau" class="control-label"></label>
                                            <input type="password" asp-for="MatKhau" class="form-control" />
                                            <span hidden asp-validation-for="MatKhau" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <input type="submit" value="Đăng Nhập" class="btn btn-primary mt-3" />
                                        </div>

                                        <a class="small text-muted" asp-area="" asp-controller="TaiKhoans" asp-action="Create">Quên mật khẩu ?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Tôi chưa có tài khoản ? <a asp-area="" asp-controller="TaiKhoans" asp-action="Create" style="color: #393f81;">Đăng ký</a>
                                        </p>
                                        <div>
                                            <a asp-action="Index">Trở lại trang chính</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>






